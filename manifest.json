{
  "manifest_version": 3,
  "name": "Stream Stack",
  "description": "Cross platform watchlist :D",
  "version": "1.0",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Open Watchlist"
  },
  "side_panel" : {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "scripts/service-worker.js"
  },
  "permissions": [
    "sidePanel", 
    "activeTab", 
    "storage"
  ],
  "content_scripts" : [
    {
      "js": ["scripts/prime.js"],
      "matches" : [
        "*://*.amazon.com/gp/video/*",
        "*://*.amazon.com/Prime-Video/*",
        "*://*.primevideo.com/*",
        "*://*.amazon.com/*"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.netflix.com/*"],
      "js": ["scripts/netflix.js"],
      "run_at": "document_idle"
    }
  ]
}